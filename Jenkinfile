pipeline {
    agent any

    stages {
        stage('Git-Checkout') {
            steps {
                git branch: 'main', changelog: false, credentialsId: 'a77b18a5-7558-4a34-8338-a31ceb2babe9', poll: false, url: 'https://github.com/vistaar1999/mvnwebapp.git'
                @echo off
                echo GIT_COMMIT %GIT_COMMIT% 
            }
        }
         stage('Build') {
            steps {
                echo 'Building the Checked-out project '
                bat 'mvn clean install'
            }
        }
         stage('Building Container') {
            steps {
                echo 'Building the Container'
                bat 'docker build -t vistaark9/first-container .'
            }
        }
         stage('Pushing Image to Container') {
            steps {
                withCredentials([string(credentialsId: 'dockerpwd', variable: 'dockerhubpwd')]) {
                    echo "Pushing Image to Docker"
                    bat "docker login -u vistaark9 -p ${dockerhubpwd}"
                  }
                    bat 'docker push vistaark9/first-container'
                    bat 'docker run -d -p 8080:8080 vistaark9/first-container'
                    bat 'docker ps'
            }
        }
    }
}
